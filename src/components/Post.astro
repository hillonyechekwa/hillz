---
import { getEntryBySlug, type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article
  class="rounded-md w-full h-40 flex flex-col justify-evenly gap-8 items-center p-4 border border-black"
>
  <a
    class="w-full h-full flex flex-col justify-between items-center"
    href={`/posts/${post.slug}`}
  >-
    <h2 class="font-gopher text-lg">{post.data.title}</h2>
    <p class="text-wrap line-clamp-1 ">{post.data.summary}</p>
    <ul class="w-full flex items-center justify-between p-2">
      {
        post.data.tags.map((t) => {
          return <li class="font-gopher text-sm">{t}</li>;
        })
      }
    </ul>
  </a>
</article>
