---
import type { CollectionEntry } from "astro:content";
import Post from "./Post.astro";


type Props = {
  posts: CollectionEntry<"posts">[];
};

const { posts } = Astro.props;
---

<section
  class="w-full flex flex-col p-8 justify-evenly items-center gap-y-5 md:grid md:grid-cols-2 md:justify-evenly md:items-center md:gap-4"

>
  {
    posts.map((post) => {
      return <Post post={post} />;
    })
  }
</section>
