---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hill | About">
  <main class="w-full">
    <header
      class="w-full h-screen flex flex-col justify-evenly items-center"
      data-depth="0.1"
    >
      <h1 class="font-gopher text-5xl flex flex-col">
        <span>Hill</span>
        <span> Onyechekwa</span>
      </h1>
      <img
        class="rounded-md w-56"
        src="/images/hillz1.jpg"
        alt="a photo of hill"
      />
    </header>
    <main class="w-full">
      <section class="w-full h-screen p-2 flex flex-col space-between items-center">
        <h3 class="font-gopher capitalize text-3xl mx-auto">
          a little about me.
        </h3>
        <section
          class="w-full h-3/4 relative flex flex-col justify-evenly items-center gap-8 font-gotham"
        >
          <p>
            I'm a <strong>Frontend Developer</strong> with a strong background in
            creating building <strong
              >aesthetically appealing and user-friendly web experiences
            </strong> and problem solving web applications. I am interested in finding
            roles where I can <strong
              >challenge myself and provide value to users of the web</strong
            >. I am eager to leverage my expertise and experience as a valuable
            addition to a dynamic team, helping the compay acheive its goals.
          </p>
          <p>
            I have a keen interest in embedded systems and robotics software
            development. I'm learning new things everyday to gain more insight
            and experience about that ecosystem. I'm currently learning the rust
            programming language.
          </p>
          <p>
            When I'm not building more things into the simulation of our
            existing space-time continum, I spend tiime in my home city in
            Lagos, Nigeria with family and friends.
          </p>
        </section>
      </section>
     
    </main>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/all";
  import Lenis from "lenis";

  gsap.registerPlugin(ScrollTrigger);

  const lenis = new Lenis();

  function raf(time) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  let mm = gsap.matchMedia();

  mm.add("(min-width: 800px)", () => {
    const aboutHero = document.querySelector("#about-hero");
    const aboutContent = document.querySelector("#about-content");
    const skills = document.querySelector("#skills");

    // about hero styles
    const tl = gsap.timeline();

    gsap.utils.toArray("#about-hero > h1 > span").forEach((span, index) => {
      gsap.to(span, {
        y: index === 0 ? -30 : 30,
        x: index === 0 ? -100 : 100,
        opacity: 0,
        ease: "power2.inOut",
        stagger: 0.1,
        delay: 0.3,
        scrollTrigger: {
          trigger: aboutHero,
          start: "3px left",
          end: "center",
          scrub: true,
        },
      });
    });

    gsap.utils.toArray(".about-images").forEach((image, index) => {
      // console.log(image)
      gsap.to(image, {
        x: index === 0 ? -80 : 80,
        opacity: 0,
        ease: "power2.inOut",
        stagger: 0.1,
        delay: 0.3,
        scrollTrigger: {
          trigger: aboutHero,
          start: "5% left",
          end: "center",
          scrub: true,
        },
      });
    });

    gsap.utils.toArray(".about-sections p").forEach((sect, index) => {
      gsap.fromTo(
        sect,
        {
          x: -10,
          opacity: 0,
        },
        {
          x: 0,
          opacity: 1,
          ease: "power2.inOut",
          stagger: 0.1,
          delay: 0.1,
          scrollTrigger: {
            trigger: aboutContent,
            start: "top bottom-=50",
            end: "bottom center",
            scrub: true,
          },
        }
      );
    });
  });
</script>
