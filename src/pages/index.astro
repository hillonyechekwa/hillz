---
import Layout from "../../public/Layout.astro";
import {getCollection} from "astro:content"
import ProjectList from "../components/ProjectList.astro"
const projects = await getCollection("projects")
---

<Layout title="Hill | Home" >
    <main class="home-container">
        <header class="home-hero">
            <article id="first-col">
                <h3>
                    <span>Web</span>
                    <span>Engineer</span>
                    <small>
                        <span>Typescript</span>
                        <span>Rust</span>
                        <span>GraphQl</span>
                    </small>
                </h3>
                <h3>
                    <span>Technical</span>
                    <span>Writer</span>
                </h3>
            </article>
            <article id="second-col">
                <p>
                    I have an invested interest in the multi-faceted parts of
                    software engineering and computer programming and
                    implementing them to solve real problems that affect me and
                    my environment.
                </p>

                <button id="primary-cta"
                    ><a href="./projects">See My Projects</a>
                </button>
            </article>

            <h1>
                <span>Hillary</span>
                <span>Onyechekwa</span>
            </h1>
        </header>
        <main class="index-main">
            <section id="main-inner__wrappper">
                <section id="about" class="main-sections">
                    <article>
                        <h3>about me.</h3>
                    </article>
                    <p>
                        I'm a <strong>web engineer</strong> with a strong background
                        in creating building <strong
                            >aesthetically appealing and user-friendly web
                            experiences
                        </strong> and problem solving web applications. I am interested
                        in finding roles where I can <strong
                            >challenge myself and provide value to users of the
                            web</strong
                        >. I am eager to leverage my expertise and experience as
                        a valuable addition to a dynamic team, helping the
                        compay acheive its goals.
                    </p>
                    <p>
                        I also an embedded systems and robotics enthusiast and
                        working towards gaining experience in that technology
                        niche someday.
                    </p>
                </section>
            </section>
            <section id="index-projects">
                <h2>Projects</h2>
                <p>Here's a list of some of my projects.<p>
                    <!-- add project Card component here. -->
                    <ProjectList projects={projects}/>
            </section>
        </main>

        <style>
            .home-hero {
                width: 100%;
                height: 100dvh;
                /* grid */
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                grid-template-rows: repeat(2, 1fr);
                justify-content: space-evenly;
                align-items: center;

                font-family: var(--gopher);
                color: var(--primary-text);
                background-color: var(--bg);

                article#first-col {
                    padding: 5px 30px;
                }

                article#first-col h3 {
                    display: block;
                    position: relative;
                    top: 30px;

                    span {
                        display: block;
                        font-family: var(--gotham);
                        text-transform: capitalize;
                        font-size: 1.7em;
                    }

                    small span {
                        display: inline-block;
                        font-size: 0.7em;
                        font-family: var(--gotham);
                        font-weight: 400;
                        color: var(--primary-text);
                        /* opacity: 0; */
                    }
                }

                h1 {
                    grid-area: 2/1/3/3;
                    justify-self: center;
                    font-size: 8em;
                    font-weight: 800;

                    span {
                        font-family: var(--gopher);
                        display: block;
                        text-align: center;
                        text-transform: capitalize;
                        position: relative;

                        &:nth-child(2) {
                            position: relative;
                            top: -30px;
                        }
                    }
                }
            }

            article#first-col h3:nth-child(2) {
                position: relative;
                top: 7rem;
            }

            article#second-col {
                p {
                    display: block;
                    position: relative;
                    top: 40px;
                    font-size: 1.25rem;
                    line-height: 1.3em;
                    word-wrap: break-word;
                    inline-size: 450px;
                }
            }

            #primary-cta {
                width: 250px;
                border-radius: 25px;

                border: none;
                display: grid;
                place-items: center;
                font-family: var(--gopher);
                font-weight: 600;
                font-size: 1.2em;
                position: relative;
                top: 150px;
                left: 230px;
                border: none;
                border: 2px solid var(--base);
                background-color: var(--btn-color);
                cursor: pointer;

                a {
                    border-radius: 25px;
                    font-family: var(--gopher);
                    color: var(--primary-text);
                    padding: 15px;
                    width: 100%;
                    height: 100%;
                    cursor: pointer;
                }
                &:after {
                    content: var(--btn-arrow);
                    display: inline-block;
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                    border: 2px solid var(--base);
                    background-color: var(--base);
                    position: absolute;
                    left: 270px;
                    top: -2px;
                    padding: 13px;
                }
            }

            .index-main {
                width: 100%;
            }

            section.index-main {
                position: relative;
                z-index: 2;
            }

            section#main-inner__wrapper {
                border-radius: 25px;
            }

            section#about {
                width: 100%;
                height: 100dvh;
                display: flex;
                justify-content: space-evenly;
                align-items: center;
                background-color: var(--base);

                article {
                    display: flex;
                    flex-direction: column;

                    h3 {
                        text-transform: capitalize;
                        font-size: 2.7em;
                        font-family: var(--gopher);
                        text-align: center;
                        position: relative;
                        color: var(--primary-text);
                    }
                }
                p {
                    font-family: var(--gopher);
                    font-size: 1.24rem;
                    font-weight: 400;
                    inline-size: 450px;
                    line-height: 1.65rem;
                    color: var(--secondary-text);

                    strong {
                        color: var(--primary-text);
                    }
                }
            }

            section#index-projects {
                width: 100%;
                height: 100dvh;
                padding-top: 50px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                align-items: center;
                

                h2 {
                    font-family: var(--gopher);
                    font-size: 2.6rem;
                    margin-left: 30px;
                    color: var(--primary-text);
                }

                > p {
                    margin-left: 30px;
                    font-family: var(--gopher);
                    font-size: 1.3rem;
                    color: var(--primary-text);
                }

                .project-list{
                    display: flex;
                    /* flex-direction: column; */
                    justify-content: space-between;
                    align-items: center;
                    overflow-x: hidden;
                }

            }
        </style>
    </main>
</Layout>
