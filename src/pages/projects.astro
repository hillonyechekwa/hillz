---
import Layout from "../layouts/Layout.astro";


import Project from "@/components/Project.astro";

const projectsData = await Astro.glob("../content/projects/*.md");
---

<Layout title="Hill | Projects">
  <main class="w-full grow">
    <header class="w-full h-3/4 p-2 md:h-5/6 md:p-4">
      <h1
        class="dark:text-gray-200 font-gopher text-3xl md:text-4xl md:pl-5 md:pb-3"
      >
        <span>All</span>
        <span>Projects.</span>
      </h1>
      <p
        class="dark:text-gray-200 font-gotham text-lg font-bold md:text-xl md:px-8"
      >
        Here are a few of my best projects that show case how I use the
        technologies in my tech stack to solve problems around my life and
        things that interest me.
      </p>
    </header>
    <section
      class="w-full flex grid grid-cols-1 justify-evenly items-center gap-y-5 md:grid md:grid-cols-2 md:justify-evenly md:items-center md:gap-4 lg:gap-12"
    >
      <!-- <ProjectList projects={projects}/> -->
      {
        projectsData.map((project) => (
          <Project url={project.url} frontmatter={project.frontmatter} tagType="h2" />
        ))
      }
    </section>
  </main>
